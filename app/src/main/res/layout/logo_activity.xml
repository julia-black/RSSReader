<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:id="@+id/logoFragment"
    android:layout_height="fill_parent"
    android:background="@drawable/background_selector">

    <ImageView
        android:id="@+id/logoRss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/rssReader"
        android:layout_width="wrap_content"

        android:layout_below="@id/logoRss"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="RSS Reader"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/rssReader"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingTop="5dp"
        android:textColor="#deffffff"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        android:text="Your Favourite Source"
        />
    <ImageView
        android:id="@+id/logoMercury"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="82dp"
        android:layout_below="@id/rssReader"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

</RelativeLayout>