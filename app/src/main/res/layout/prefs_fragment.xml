<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".NewsListActivity">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="36dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:drawableLeft="@drawable/data"
            android:drawablePadding="10dp"
            android:id="@+id/wi_fi_only_sw"
            android:textColor="#de000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/pref_wi_fi_only_title" />

        <Switch
            android:drawableLeft="@drawable/location"
            android:drawablePadding="10dp"
            android:id="@+id/use_location_sw"
            android:layout_margin="10dp"
            android:textColor="#de000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_location" />
        <Switch
            android:drawableLeft="@drawable/notification"
            android:drawablePadding="10dp"
            android:id="@+id/notifications_sw"
            android:textColor="#de000000"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_notifications_title" />

        <TextView
            android:drawableLeft="@drawable/update"
            android:drawablePadding="10dp"
            android:id="@+id/periodic_updates_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#de000000"
            android:text="@string/pref_periodic_updates_title"/>

        <TextView
            android:id="@+id/period"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-10dp"
            android:textColor="@android:color/darker_gray"
            android:text="Every 15 minutes"/>

    </LinearLayout>

</ScrollView>

</RelativeLayout>
